{
  "compilerOptions": {
    "target": "ES2020", // Define o alvo da compilação para ES2020
    "module": "commonjs", // Usa CommonJS para compatibilidade com Node.js
    "rootDir": "src", // Define a pasta de origem do código TypeScript
    "outDir": "dist", // Define a pasta de saída para os arquivos compilados
    "strict": true, // Habilita verificações rigorosas
    "esModuleInterop": true // Habilita interoperabilidade de módulos ES6
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos .ts na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
